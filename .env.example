# ============================================
# BOT CONFIGURATION
# ============================================
BOT_PREFIX=!
BOT_NAME=Smart Bot
ADMIN_PHONE=+263xxxxxxxx
BOT_DESCRIPTION=Enterprise WhatsApp Bot with Dashboard

# ============================================
# DATABASE CONFIGURATION (Supabase)
# ============================================
# Get these from https://supabase.com
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-key

# Optional: For local PostgreSQL
DATABASE_URL=postgresql://user:password@localhost:5432/smart_bot

# ============================================
# API & DASHBOARD CONFIGURATION
# ============================================
API_PORT=3000
API_BASE_URL=http://localhost:3000
DASHBOARD_URL=http://localhost:3000
NODE_ENV=development

# ============================================
# WHATSAPP CONFIGURATION (Baileys)
# ============================================
WA_NUMBER=+263xxxxxxxx
WA_BUSINESS_ACCOUNT=false
WA_MULTIDEVICE=true

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=info
LOG_FILE=bot.log

# ============================================
# SECURITY
# ============================================
JWT_SECRET=your-secret-key-here-min-32-chars
JWT_EXPIRES_IN=7d

# API Rate Limiting (requests per 15 minutes)
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=900000

# ============================================
# FEATURES
# ============================================
ENABLE_DATABASE_SYNC=true
ENABLE_MERCHANTS=true
ENABLE_PRODUCTS=true
ENABLE_ORDERS=true
ENABLE_RATINGS=true
ENABLE_NOTIFICATIONS=true

# ============================================
# INTEGRATIONS
# ============================================
ENABLE_STRIPE=false
STRIPE_SECRET_KEY=sk_test_xxxxxxx

ENABLE_TWILIO=false
TWILIO_ACCOUNT_SID=xxxxxxx
TWILIO_AUTH_TOKEN=xxxxxxx

# ============================================
# CACHE CONFIGURATION
# ============================================
# Cache TTL in seconds
CACHE_SESSION_TTL=3600
CACHE_CART_TTL=7200
CACHE_MERCHANT_TTL=1800
CACHE_PRODUCT_TTL=900

# ============================================
# DEVELOPMENT
# ============================================
DEBUG=false
VERBOSE_LOGGING=false
MOCK_DATABASE=false
